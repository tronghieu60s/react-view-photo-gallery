{
    "compilerOptions": {
        "outDir": "./dist/",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": false,
        "jsx": "react-jsx",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": false,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types",
            "index.d.ts"
        ],
    },
    "include": [
        "src/**/*", "index.d.ts", "index.ts",
    ],
    "exclude": [
        "dist",
        "**/*.d.ts",
        "**/*.spec.ts",
        "node_modules"
    ]
}